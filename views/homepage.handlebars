
<ol class="post-list">
    {{#each posts as |post|}}
    {{!-- Any HTML code in between (e.g., the <li> element) will be repeated for every item in posts --}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post_url}}" target="_blank">{{title}}</a>
                <span>{{post_url}}</span>
            </div>
            <div class="meta">
                {{vote_count}} point(s) by {{user.username}} on {{created_at}}
                |
                <a href="/post/{{id}}">{{comments.length}} comment(s) </a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>